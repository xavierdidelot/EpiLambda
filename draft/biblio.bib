  issn =          {15446115},
}

@article{miropinaEstimatingLambdaMeasure2023,
  author =        {Mir{\'o} Pina, Ver{\'o}nica and Joly, {\'E}milien and
                   {Siri-J{\'e}gousse}, Arno},
  journal =       {Theoretical Population Biology},
